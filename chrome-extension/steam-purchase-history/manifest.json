{
  "manifest_version": 3,
  "name": "Steam Purchase History Monitor",
  "version": "1.0",
  "description": "Monitor Steam purchase history through network requests",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "cookies"
  ],
  "host_permissions": [
    "https://store.steampowered.com/*",
    "https://steamcommunity.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:5173/*",
        "http://127.0.0.1:5173/*",
        "http://localhost:8080/*",
        "http://127.0.0.1:8080/*"
      ],
      "js": ["offer-listener.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Steam Purchase Monitor"
  }
}
